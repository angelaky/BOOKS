@using BooksBlog.ViewModels;
@model IEnumerable<GuestPostViewModel>

<header class="intro-header" style="background-image: url('Images/books.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1></h1>
                    <hr class="small">
                    <span class="subheading">Books are a uniquely portable magic</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-1">
            @foreach (var post in Model)
            {
                <div class="post-preview">
                    <a href="Home/Info/@post.Id">
                        <h2 class="post-title">
                            @post.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @Html.Raw(post.Content)
                        </h3>
                    </a>
                    <p class="post-meta">Posted on @post.CreatedOn</p>
                    <p class="post-meta">Comments: @post.Comments.Count</p>
                    <p class="post-meta">Category @Html.ActionLink(@post.Category.Name, "FilterByCategory", "Home", new { Id = post.Category.Id }, null)</p>
                </div>
                <hr>
            }
        </div>

        <div class="col-md-3 sidebar-gutter">
            <aside>
                <!-- sidebar-widget -->
                <div class="sidebar-widget">
                    <h3 class="sidebar-title">About Me</h3>
                    <div class="widget-container widget-about">
                        <a href="post.html"><img src="~/Content/Images/author.jpg" alt=""></a>
                        <h4>Jamie Mooz</h4>
                        <div class="author-title">Dreamer</div>
                        <p>Gazing through the window at the world outside</p>
                        <p>Wondering if mother earth will survive </p>
                        <p>Hoping that mankind will stop abusing her, sometime.</p>
                    </div>
                </div>
                <!-- sidebar-widget -->
                <div class="sidebar-widget">
                    <h3 class="sidebar-title">Featured Posts</h3>
                    <div class="widget-container">
                        <ul>
                            @Html.Partial("_featuredPosts", (IEnumerable<BooksBlog.ViewModels.GuestPostViewModel>)ViewData["FeaturedPosts"])
                        </ul>

                    </div>

                </div>
                <!-- sidebar-widget -->
                <div class="sidebar-widget">
                    <h3 class="sidebar-title">Archive</h3>
                    <div class="widget-container">
                        <div class="widget-socials">
                            <ul>
                                <li>@Html.ActionLink("January", "FilterByMonth", "Home", new { monthId = 1 }, null)</li>
                                <li>@Html.ActionLink("February", "FilterByMonth", "Home", new { monthId = 2 }, null)</li>
                                <li>@Html.ActionLink("March", "FilterByMonth", "Home", new { monthId = 3 }, null)</li>
                                <li>@Html.ActionLink("April", "FilterByMonth", "Home", new { monthId = 4 }, null)</li>
                                <li>@Html.ActionLink("May", "FilterByMonth", "Home", new { monthId = 5 }, null)</li>
                                <li>@Html.ActionLink("June", "FilterByMonth", "Home", new { monthId = 6 }, null)</li>
                                <li>@Html.ActionLink("July", "FilterByMonth", "Home", new { monthId = 7 }, null)</li>
                                <li>@Html.ActionLink("August", "FilterByMonth", "Home", new { monthId = 8 }, null)</li>
                                <li>@Html.ActionLink("September", "FilterByMonth", "Home", new { monthId = 9 }, null)</li>
                                <li>@Html.ActionLink("October", "FilterByMonth", "Home", new { monthId = 10 }, null)</li>
                                <li>@Html.ActionLink("November", "FilterByMonth", "Home", new { monthId = 11 }, null)</li>
                                <li>@Html.ActionLink("December", "FilterByMonth", "Home", new { monthId = 12 }, null)</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- sidebar-widget -->
                <div class="sidebar-widget">
                    <h3 class="sidebar-title">Categories</h3>
                    <div class="widget-container">
                        <ul>
                           @Html.Partial("_categoryList", (IEnumerable<BooksBlog.Areas.Administration.ViewModels.CategoryViewModel>) ViewData["Categories"])
                        </ul>
                    </div>
                </div>
        </div>

    </div>
</div>


