@using BooksBlog.ViewModels;
@model IEnumerable<GuestPostViewModel>

<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Books are a uniquely portable magic</h1>
                    <hr class="small">
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            @foreach (var post in Model)
            {
                <div class="post-preview">
                    <a href="Home/Info/@post.Id">
                        <h2 class="post-title">
                            @post.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @Html.Raw(post.Content)
                        </h3>
                    </a>
                    <p class="post-meta">Posted by <a href="#">@post.Author.UserName</a> on @post.CreatedOn</p>
                </div>
                <hr>
            }
        </div>
    </div>
</div>